generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
}

model Owner {
  id           Int           @id @default(autoincrement())
  firstName    String
  lastName     String
  phone        String
  email        String        @unique
  address      String
  createdAt    DateTime      @default(now())
  pets         Pet[]
  appointments Appointment[]
}

model Pet {
  id           Int           @id @default(autoincrement())
  name         String
  species      String
  breed        String
  birthDate    DateTime
  gender       String
  createdAt    DateTime      @default(now())
  ownerId      Int
  owner        Owner         @relation(fields: [ownerId], references: [id])
  visits       Visit[]
  appointments Appointment[]
}

model Vet {
  id           Int           @id @default(autoincrement())
  firstName    String
  lastName     String
  specialty    String
  phone        String
  email        String        @unique
  createdAt    DateTime      @default(now())
  visits       Visit[]
  appointments Appointment[]
}

model Visit {
  id        Int            @id @default(autoincrement())
  date      DateTime
  diagnosis String
  notes     String?
  createdAt DateTime       @default(now())
  petId     Int
  vetId     Int
  pet       Pet            @relation(fields: [petId], references: [id])
  vet       Vet            @relation(fields: [vetId], references: [id])
  services  VisitService[]
}

model Service {
  id          Int            @id @default(autoincrement())
  name        String
  description String
  price       Float
  category    String
  visits      VisitService[]
}

model VisitService {
  id        Int     @id @default(autoincrement())
  notes     String?
  visitId   Int
  serviceId Int
  visit     Visit   @relation(fields: [visitId], references: [id])
  service   Service @relation(fields: [serviceId], references: [id])
}

model Appointment {
  id        Int      @id @default(autoincrement())
  date      DateTime
  timeSlot  String
  status    String   @default("scheduled")
  notes     String?
  createdAt DateTime @default(now())
  petId     Int
  vetId     Int
  ownerId   Int
  pet       Pet      @relation(fields: [petId], references: [id])
  vet       Vet      @relation(fields: [vetId], references: [id])
  owner     Owner    @relation(fields: [ownerId], references: [id])
}
